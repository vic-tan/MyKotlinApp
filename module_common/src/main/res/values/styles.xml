<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--高度宽度、统一样式设定-->
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--相册选择库样式，注意每一项都不能少-->
    <style name="picture.white.style" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/white</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">true</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@mipmap/ic_back_black</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@mipmap/ic_arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@mipmap/ic_arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/black</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/black</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/picture_checkbox_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">true</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/white</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/theme_color</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/theme_color</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/picture_num_oval</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/white</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/black</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/theme_color</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/white</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@mipmap/ic_back_black</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/white</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/black</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/black</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/picture_orange_oval</item>
        <!--原图勾选样式-->
        <item name="picture.original.check.style">@drawable/picture_original_checkbox</item>
        <!--原图字体颜色-->
        <item name="picture.original.text.color">@color/picture_color_53575e</item>
        <!--标题栏高度-->
        <item name="picture.titleBar.height">48dp</item>
    </style>

    <!-- 公用按钮样式 -->
    <style name="com_btn_match_parent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="background_normal">@color/theme_color</item>
        <item name="background_pressed">@color/com_C0F2323A</item>
        <item name="background_unable">@color/enabled_color</item>
        <item name="corner_radius">25dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="com_btn_wrap_content_style" parent="com_btn_match_parent_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="corner_radius">5dp</item>
    </style>

    <!-- 设置列表样式 -->
    <style name="setting_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="background_normal">@color/white</item>
        <item name="ripple">true</item>
        <item name="ripple_color">@color/item_ripple_color</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 设置列表标题字体样式 -->
    <style name="setting_list_item_title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>


    <!-- 设置列表标题描述字体样式 -->
    <style name="setting_list_item_arrow_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- 设置列表标题EditText字体样式 -->
    <style name="setting_list_item_arrow_eidt_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">请填写</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>


    <!-- 设置列表右箭头样式 -->
    <style name="setting_list_item_arrow_right_style">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- 标准加载框布局样式-->
    <style name="LoadingLayout" />

    <item name="empty_image" type="id" />
    <item name="empty_text" type="id" />
    <item name="empty_desc_text" type="id" />
    <item name="error_image" type="id" />
    <item name="error_text" type="id" />
    <item name="retry_button" type="id" />

    <style name="LoadingLayout.Style">
        <item name="llEmptyResId">@layout/layout_loading_empty</item>
        <item name="llLoadingResId">@layout/layout_loading</item>
        <item name="llErrorResId">@layout/layout_loading_error</item>
        <item name="llTextColor">@color/color_666666</item>
        <item name="llTextSize">16sp</item>
        <item name="llButtonTextColor">@color/white</item>
        <item name="llButtonTextSize">16sp</item>
        <item name="llEmptyImage">@mipmap/ic_loading_empty</item>
        <item name="llEmptyText">暂无内容</item>
        <item name="llErrorImage">@mipmap/ic_loading_error</item>
        <item name="llErrorText"></item>
        <item name="llRetryText">重试</item>
    </style>


</resources>
