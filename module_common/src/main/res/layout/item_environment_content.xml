<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<com.ruffian.library.widget.RConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    app:background_normal="@color/white"
    app:ripple="true"
    app:ripple_color="@color/item_ripple_color">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="开发环境" />

    <TextView
        android:id="@+id/url"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/color_999999"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/title"
        app:layout_constraintLeft_toRightOf="@+id/title"
        app:layout_constraintRight_toLeftOf="@+id/radio"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="开发环境" />

    <ImageView
        android:id="@+id/radio"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:background="@mipmap/ic_select"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#E9E9E9"
        app:layout_constraintBottom_toBottomOf="@id/title" />
</com.ruffian.library.widget.RConstraintLayout>

