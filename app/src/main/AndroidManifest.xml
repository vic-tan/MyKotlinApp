<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tanlifei.app">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name="com.common.SophixStubApplication"
        android:allowBackup="true"
        android:icon="${APP_ICON}"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:resizeableActivity="true"
        android:roundIcon="${APP_ICON}"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label,networkSecurityConfig">
        <activity
            android:name=".SplashActivity"
            android:enabled="true"
            android:theme="@style/SplashActivityThemes">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.desay_svautomotive.ACTION_CAR_SETTINGS_WIDGET_STATUS_SWITCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--—————————————————————————————————————————————————— 切换环境更改app图标 ——————————————————————————————————————-->

        <!--    AndroidManifest.xml文件中添加过activity-alias标签之后，下一版本不能删除，可能会导致应用升级异常：
            以工程中的activity（MainActivity），activity-alias（activity618、activity1225）为例，
            且在升级包中删除了activity-alias（activity1225），则会有以下两种情况：
            情况一：已安装应用的enable activity非activity1225，为MainActivity或activity618，则能正常升级；
            情况二：已安装应用的enable activity为activity1225，升级完成后桌面上将找不到该应用，通过设置界面可以搜索到该应用的应用信息。
            结论：一旦在AndroidManifest.xml文件中定义过activity-alias，建议不要删除。-->
        <activity-alias
            android:name="environment_dev"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_dev"
            android:roundIcon="@mipmap/ic_launcher_dev"
            android:targetActivity=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="environment_test"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_test"
            android:roundIcon="@mipmap/ic_launcher_test"
            android:targetActivity=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="environment_pro"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_pro"
            android:roundIcon="@mipmap/ic_launcher_pro"
            android:targetActivity=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <!--—————————————————————————————————————————————————— Main ——————————————————————————————————————————————————-->
        <activity
            android:name="com.tanlifei.app.main.ui.activity.GuideActivity"
            android:label="引导页" />
        <activity
            android:name="com.tanlifei.app.main.ui.activity.MainActivity"
            android:launchMode="singleTask"
            android:label="首页" />
        <activity
            android:name="com.tanlifei.app.main.ui.activity.LoginAtivity"
            android:label="登录" />

        <!--—————————————————————————————————————————————————— 同学圈 ——————————————————————————————————————————————————-->

        <activity
            android:name=".classmatecircle.ui.activity.CircleDetailActivity"
            android:label="同学圈详情" />

        <activity
            android:name=".classmatecircle.ui.activity.CircleVideoPagerActivity"
            android:label="同学圈视频" />

        <!--—————————————————————————————————————————————————— 我的 ——————————————————————————————————————————————————-->
        <activity
            android:name="com.tanlifei.app.profile.ui.activity.SettingActivity"
            android:label="个人设置" />
        <activity
            android:name="com.tanlifei.app.profile.ui.activity.ProfileManagerActivity"
            android:label="个人资料" />
        <activity
            android:name="com.tanlifei.app.profile.ui.activity.IntroductionActivity"
            android:label="修改人个简介" />

        <activity
            android:name="com.tanlifei.app.profile.ui.activity.AddressManagerActivity"
            android:label="收货地址" />

        <activity
            android:name="com.tanlifei.app.profile.ui.activity.AboutActivity"
            android:label="关于网上老年大学" />
        <activity
            android:name="com.tanlifei.app.profile.ui.activity.ManualActivity"
            android:label="操作手册" />
        <activity
            android:name="com.tanlifei.app.profile.ui.activity.ManualDetailActivity"
            android:label="操作手册" />


    </application>

</manifest>