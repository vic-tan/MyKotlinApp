<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/wrap_wrap"
    android:orientation="vertical"
    app:background_normal="@color/white"
    app:corner_radius_top_left="20dp"
    app:corner_radius_top_right="20dp">

    <com.ruffian.library.widget.RRelativeLayout
        android:id="@+id/opt_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:corner_radius_top_left="20dp"
        app:corner_radius_top_right="20dp">

        <TextView
            android:id="@+id/iv_cancel"
            style="@style/wrap_match"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_finish"
            style="@style/wrap_match"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="完成"
            android:textColor="@color/theme_color"
            android:textSize="18sp" />

    </com.ruffian.library.widget.RRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginBottom="10dp"
        android:background="@color/base_layout_bg" />


    <!--此部分需要完整复制过去，删减或者更改ID会导致初始化找不到内容而报空-->
    <LinearLayout
        android:id="@+id/optionspicker"
        style="@style/match_wrap"
        android:background="@android:color/white"
        android:gravity="center"
        android:minHeight="180dp"
        android:orientation="horizontal">

        <com.contrarywind.view.WheelView
            android:id="@+id/options1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.contrarywind.view.WheelView
            android:id="@+id/options2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.contrarywind.view.WheelView
            android:id="@+id/options3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white" />

</com.ruffian.library.widget.RLinearLayout>