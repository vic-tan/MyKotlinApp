<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:elevation="6dp"
    android:orientation="horizontal">


    <LinearLayout style="@style/navigator_tab_style">

        <ImageView
            style="@style/navigator_tab_image_style"
            android:tag="0" />

        <TextView
            style="@style/navigator_tab_title_style"
            android:tag="0"
            android:text="首页" />
    </LinearLayout>


    <LinearLayout style="@style/navigator_tab_style">

        <ImageView
            style="@style/navigator_tab_image_style"
            android:tag="1" />

        <TextView
            style="@style/navigator_tab_title_style"
            android:tag="1"
            android:text="班群" />
    </LinearLayout>

    <LinearLayout style="@style/navigator_tab_style">


        <ImageView
            style="@style/navigator_tab_image_style"
            android:tag="2" />


        <TextView
            style="@style/navigator_tab_title_style"
            android:layout_below="@+id/msg_icon"
            android:tag="2"
            android:text="同学圈" />


    </LinearLayout>

    <LinearLayout style="@style/navigator_tab_style">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/msg_icon"
                style="@style/navigator_tab_image_style"
                android:layout_gravity="center"
                android:tag="3" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/msg_badge"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="7dp"
                android:visibility="gone"
                app:background_normal="@android:color/holo_red_light"
                app:corner_radius="30dp" />
        </FrameLayout>

        <TextView
            style="@style/navigator_tab_title_style"
            android:tag="3"
            android:text="学习" />


    </LinearLayout>

    <LinearLayout style="@style/navigator_tab_style">

        <ImageView
            style="@style/navigator_tab_image_style"
            android:tag="4" />

        <TextView
            style="@style/navigator_tab_title_style"
            android:tag="4"
            android:text="我的" />
    </LinearLayout>
</merge>