<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:orientation="vertical">


    <com.ruffian.library.widget.RImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:corner_radius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@mipmap/bg_default_img" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/ic_circle_delete"
        app:layout_constraintEnd_toEndOf="@id/cover"
        app:layout_constraintTop_toTopOf="@id/cover" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/cover_mask"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="选择封面"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:background_normal="#99000000"
        app:corner_radius_bottom_left="5dp"
        app:corner_radius_bottom_right="5dp"
        app:layout_constraintBottom_toBottomOf="@id/cover"
        app:layout_constraintEnd_toEndOf="@id/cover"
        app:layout_constraintStart_toStartOf="@id/cover" />

</androidx.constraintlayout.widget.ConstraintLayout>