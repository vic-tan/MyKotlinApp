<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_match"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/refreshLayout"
            layout="@layout/layout_recycler_refresh" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opt_layout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/comment_btn"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="评论"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:background_normal="@array/classmate_circle_comment"
            app:corner_radius="20dp"
            app:icon_direction="left"
            app:icon_height="18dp"
            app:icon_src_normal="@mipmap/ic_comment_white"
            app:icon_width="19dp"
            app:icon_with_text="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/praise_btn"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="6"
            android:maxLines="1"
            android:text="点赞"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:background_normal="@array/classmate_circle_praise"
            app:corner_radius="20dp"
            app:icon_direction="left"
            app:icon_height="18dp"
            app:icon_src_normal="@mipmap/ic_praise_white"
            app:icon_width="19dp"
            app:icon_with_text="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/comment_btn"
            app:layout_constraintTop_toTopOf="parent" />


        <com.ruffian.library.widget.RTextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/line"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="发表观点"
            android:textColor="@color/color_999999"
            android:textSize="18sp"
            app:background_normal="#F5F6FA"
            app:corner_radius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/praise_btn"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/line_E9E9E9"
        app:layout_constraintBottom_toTopOf="@+id/opt_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>