<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 首页底部tabs 布局公用样式 -->
    <style name="navigator_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 首页底部tabs 图片公用样式 -->
    <style name="navigator_tab_image_style">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">27dp</item>
    </style>

    <!-- 首页底部tabs 字体公用样式 -->
    <style name="navigator_tab_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tab_txt_normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="split_line">
        <item name="android:background">#F4F4F4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- 个人中心列表样式 -->
    <style name="com_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="com.tanlifei.mykotlinapp:background_normal">@color/com_red</item>
        <item name="com.tanlifei.mykotlinapp:corner_radius">25dp</item>
        <item name="com.tanlifei.mykotlinapp:ripple">true</item>
        <item name="com.tanlifei.mykotlinapp:ripple_color">@color/com_80F2323A</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
